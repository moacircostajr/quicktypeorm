{
   "compilerOptions": {
      "lib": [
         "es2018"
      ],
      "target": "es2018",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "allowJs": true
   },
   "exclude": [
      "node_modules"
   ]
}